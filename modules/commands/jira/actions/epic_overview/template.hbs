<ac:layout>
  <ac:layout-section ac:type="two_right_sidebar">
    <ac:layout-cell>

      <table>
        <thead>
          <tr>
            <th>Epic</th>
            <th>Stories</th>
          </tr>
        </thead>
        <tbody>
          {{#each epics}}
          <tr>
            <td>
              {{{ jiraIssueMacro @key }}}
            </td>
            <td>
              {{#each this}}
              {{{ jiraIssueMacro this }}}<br />
              {{/each}}
            </td>
          </tr>
          {{/each}}
        </tbody>
        <tfoot>
          <tr>
            <th colspan="2"></th>
          </tr>
        </tfoot>
      </table>
    </ac:layout-cell>
    <ac:layout-cell>
      {{{ noteMacro "Generated" "This page was generated. Any manual edits will be lost." }}}
      <table>
        <tr>
          <th>The following statuses has been omitted</th>
          <td>Closed,Done,Resolved,Cancelled</td>
        </tr>
        <tr>
          <th>Project(s)</th>
          <td><ul> {{#each projects}}
            <li>{{{ this.name }}} | Lead: {{{ this.lead.name }}}</li>
            {{/each}}
            </ul></td>
        </tr>
      </table>
      {{{ jiraChartMacro chart }}}
    </ac:layout-cell>
  </ac:layout-section>
</ac:layout>